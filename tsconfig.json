{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ], // 库
    "module": "ESNext", // 模块类型
    "target": "ESNext", // 目标版本
    "moduleResolution": "node", // 模块解析策略
    "esModuleInterop": true, // 启用 ES 模块互操作
    "skipLibCheck": true, // 跳过库检查
    "forceConsistentCasingInFileNames": true, // 强制文件名一致性
    "resolveJsonModule": true, // 启用 JSON 模块解析
    "strict": true, // 严格模式
    "sourceMap": true, // 启用源映射
    "declaration": true, // 启用声明
    "declarationMap": true, // 启用声明映射
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@vue/*": [
        "packages/*/src"
      ]
    },
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__",
  ]
}